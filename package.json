{
  "name": "es2015-webpack-karma-jasmine-boilerplate",
  "private": true,
  "version": "1.0.0",
  "description": "Boilerplate for creating javascript libraries in ES2015 with tests.",
  "main": "index.js",
  "scripts": {
    "build": "export NODE_ENV=production && npm run :webpack:build",
    "clean": "npm run clean:build && npm run clean:logs && npm run clean:reports",
    "clean:build": "rm -f index.js && rm -f index.js.map",
    "clean:logs": "rm -f npm-debug.log",
    "clean:reports": "rm -Rf ./reports",
    "develop": "export NODE_ENV=development && npm run :webpack:build:watch",
    "reset-deps": "rm -Rf node_modules && npm cache clean && npm install",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "echo 'No E2E tests, skipping...'",
    "test:unit": "export NODE_ENV=test && npm run :karma",
    "test:unit:watch": "export NODE_ENV=test && npm run :karma:watch",
    "test:unit:fast": "export FAST=1 && npm run test:unit",
    "test:unit:fast:watch": "export FAST=1 && npm run test:unit:watch",
    "precommit": "npm run test:unit:fast && npm run build",
    ":karma": "./node_modules/.bin/karma start config/karma.js",
    ":karma:watch": "npm run :karma -- --auto-watch --no-single-run",
    ":webpack:build": "./node_modules/.bin/webpack --config config/webpack.js --progress",
    ":webpack:build:watch": "npm run :webpack:build -- --watch"
  },
  "author": "Matthew Turnbull <turnbullm@gmail.com> (http://turnbullm.com)",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.7.6",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "change-case": "^2.3.1",
    "node-config": "file:libs/node-config",
    "husky": "^0.11.4",
    "isparta": "^4.0.0",
    "isparta-loader": "^2.0.0",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-coverage": "^0.5.5",
    "karma-html-reporter": "^0.2.7",
    "karma-jasmine": "^0.3.8",
    "karma-json-reporter": "^1.2.0",
    "karma-json-result-reporter": "^0.4.2",
    "karma-nyan-reporter": "^0.2.4",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "phantomjs-prebuilt": "^2.1.7",
    "webpack": "^1.12.15"
  }
}
